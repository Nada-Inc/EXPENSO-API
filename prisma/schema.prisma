// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// User Modal
model User {
  id               String            @id @default(dbgenerated("uuid()")) @db.Char(12)
  userName         String
  password         String
  email            String            @unique
  phoneNumber      String
  currency         String
  country          String
  subscriptionType String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  lastLogin        DateTime?
  status           Boolean           @default(true)
  FixedIncome      FixedIncome[]
  VariableIncome   VariableIncome[]
  FixedExpense     FixedExpense[]
  Summary          Summary[]
  VariableExpense  VariableExpense[]

  @@index([email])
}

// Income Models

model FixedIncome {
  id              String            @id @default(dbgenerated("uuid()")) @db.Char(12)
  incomeName      String
  userId          String // This references the User model's id
  user            User              @relation(fields: [userId], references: [id])
  amount          Decimal
  creditDate      Int               @default(1)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  FixedIncomeData FixedIncomeData[]

  @@index([userId])
}

model FixedIncomeData {
  id          String   @id @default(dbgenerated("uuid()")) @db.Char(12)
  fixIncomeId String
  amount      Float
  createdDate DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Define the relation to FixedIncome model
  fixedIncomeItem FixedIncome @relation(fields: [fixIncomeId], references: [id])

  @@index([fixIncomeId])
}

model VariableIncome {
  id                 String               @id @default(dbgenerated("uuid()")) @db.Char(12)
  incomeame          String
  amount             Float
  userId             String // This references the User model's id
  user               User                 @relation(fields: [userId], references: [id])
  createdDate        DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  VariableIncomeData VariableIncomeData[]

  @@index([userId])
}

model VariableIncomeData {
  id               String         @id @default(dbgenerated("uuid()")) @db.Char(12)
  variableIncomeId String
  variableIncome   VariableIncome @relation(fields: [variableIncomeId], references: [id])
  amount           Float
  userId           String // This references the User model's id

  createdDate DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([variableIncomeId])
}

// Expense Modals

model FixedExpense {
  id               String             @id @default(dbgenerated("uuid()")) @db.Char(12)
  expenseName      String
  amount           Decimal
  debitDate        DateTime
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  userId           String
  user             User               @relation(fields: [userId], references: [id])
  FixedExpenseData FixedExpenseData[]

  @@index([userId])
}

model FixedExpenseData {
  id             String       @id @default(dbgenerated("uuid()")) @db.Char(12)
  amount         Decimal
  fixedExpenseId String
  fixedExpense   FixedExpense @relation(fields: [fixedExpenseId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([fixedExpenseId])
}

model VariableExpense {
  id                String   @id @default(dbgenerated("uuid()")) @db.Char(12)
  variableExpenseId String
  expenseName       String
  amount            Float
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
}

// Summary
model Summary {
  id              String   @id @default(dbgenerated("uuid()")) @db.Char(12)
  fixExpenseTotal Float
  varExpenseTotal Float
  fixIncomeTotal  Float
  varIncomeTotal  Float
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  updatedAt       DateTime @updatedAt
  createdAt       DateTime @default(now())

  @@index([userId])
}

model TestTable {
  id   Int    @id @default(autoincrement())
  name String
  age  Int?
}
